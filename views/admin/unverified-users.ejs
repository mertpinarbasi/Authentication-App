<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">


    <title>Unverified Users</title>

    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">

    <style type="text/css">
        body {
            background-color: #DADADA;
        }

        body>.grid {
            height: 100%;
        }

        .image {
            margin-top: -100px;
        }

        .column {
            max-width: 450px;
        }
    </style>

</head>

<body>

    <div class="ui large aligned center aligned grid">
        <div class="column">
            <h2 class="ui violet image header">
                <div class="content">
                    Unverified Users After 1 Day
                </div>
            </h2>


            <div class="ui message center aligned ">
                <% if(locals.unverifiedUsersResult){ %>
                    <% locals.unverifiedUsersResult.forEach(function(user) { %>
                        <div class="ui  centered  wide card">

                            <div class="content">
                                <a class="header">
                                    <%= user.name %>
                                        <%= user.surname %>
                                </a>
                                <div class="meta">
                                    <span class="date">
                                        <%= user.email %>
                                    </span>
                                </div>


                                <div class="description">

                                    <div class="ui divider"> Account created at :</div>
                                    <%= user.emailToken.createdAt %>
                                </div>
                                <div class="ui divider"> Email expiration date:</div>

                                <%= user.emailToken.expiresAt %>

                            </div>

                            <% }); %>
                                <% } %>

                        </div>

            </div>


            <div class="ui  centered large submit button">
                <i class="ui left undo icon"></i><a href="/admin">Turn Back</a>
            </div>

        </div>
    </div>



</body>


</html>